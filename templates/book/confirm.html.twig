{% block title %}Confirm{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1> Are you sure that you want to order this book?</h1>

        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Author</th>


            </tr>
            </thead>
            <thead>
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author.name }} {{ book.author.lastname }}</td>
            </tr>
            </thead>
        </table>

        <button class="btn btn-outline-dark my-2 my-sm-0" onclick="location.href ='/index.php/orderBook/{{id}}'">Order</button>
        <button class="btn btn-outline-dark my-2 my-sm-0" onclick="location.href ='/books'">Back</button>
    </div>
{% endblock %}
